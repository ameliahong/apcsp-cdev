#include <stdio.h>



// student structure
// struct Student...

struct Student {
    char firstName[40];
    char lastName[40];
    int age;
    int studentId;
};

void printStudent(struct Student* student)
{
  printf("First name: %c\n", student->firstName);
  printf("Last name: %c\n", student->lastName);
  printf("Enter age: %c\n", student->age);
  printf("Enter id: %c\n", student->studentId);
}


void printAllStudents(struct Student students[], int num)
{
  // call printStudent for each student in students

  for (int i = 0; i < num; i++) {
    
    printStudent;
  }

}


int main()
{

  // an array of students
  //xxx students;
  struct Student students[100];
  char input[256];

  int numStudents = 0;
  while (1)
  {
    char c;
    printf("\nEnter a to add, p to print, q to quit:");
    fgets(input, 256, stdin);
    if (sscanf(input, "%c", &c) != 1) continue;
    if (c == 'q') 
    {
      break;
    }
    else if (c == 'p')
    {
      // print all students
      printAllStudents(students, numStudents);
      continue;
    }
    else if (c == 'a')
    {
      // enter a new student

      numStudents++;
    }
  }

  printf("\nGoodbye!\n");
}
